{
  "tests": [
    {
      "name": "basic_english_transcription",
      "input": {
        "audio": "https://www2.cs.uic.edu/~i101/SoundFiles/preamble.wav"
      },
      "timeout": 120000
    },
    {
      "name": "transcription_with_timestamps",
      "input": {
        "audio": "https://www2.cs.uic.edu/~i101/SoundFiles/gettysburg10.wav",
        "return_timestamps": true
      },
      "timeout": 120000
    },
    {
      "name": "short_speech_transcription",
      "input": {
        "audio": "https://www2.cs.uic.edu/~i101/SoundFiles/taunt.wav"
      },
      "timeout": 120000
    },
    {
      "name": "batch_transcription",
      "input": {
        "batch": [
          {"audio": "https://www2.cs.uic.edu/~i101/SoundFiles/preamble.wav"},
          {"audio": "https://www2.cs.uic.edu/~i101/SoundFiles/taunt.wav", "return_timestamps": true}
        ]
      },
      "timeout": 180000
    }
  ],
  "config": {
    "gpuTypeId": "NVIDIA RTX A4000",
    "gpuCount": 1,
    "allowedCudaVersions": ["12.8", "12.7", "12.6", "12.5", "12.4", "12.3", "12.2", "12.1", "12.0"]
  }
}
